@model lab.SecurityApp.Models.ApplicationInfo
@using (Ajax.BeginForm("Add", "Dialog", null,
                                            new AjaxOptions
                                            {
                                                InsertionMode = InsertionMode.Replace,
                                                HttpMethod = "POST",
                                                OnBegin = "App.modalOnBegin()",
                                                OnSuccess = "App.modalOnSuccess()",
                                                OnComplete = "App.modalOnComplete()",
                                            }, new { @id = "frmApplicationInfo" }))
{

    <div class="form-horizontal" id="divApplicationInfoForm">

        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.ApplicationInfoId)
        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Key, htmlAttributes: new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Key, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Key)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Value, htmlAttributes: new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Value, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Value)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-primary" id="btnApplicationInfoSave">Save</button>
                <button type="button" class="btn btn-warning" id="btnApplicationInfoCancel" onclick="CloseAppCommonWindow()">Cancel</button>
            </div>
        </div>

    </div>
}