<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <!-- CSS Files -->
    <link href="/Content/bootstrap.min.css" rel="stylesheet" />
    @*<link href="/Content/bootstrap-responsive.min.css" rel="stylesheet" />*@
    <link href="/Content/site.css" rel="stylesheet" />
    <link href="/Content/jquery-ui.css" rel="stylesheet" />
    <link href="/Content/jqdialog.custom.css" rel="stylesheet" type="text/css" />
    <!-- JS Files -->
    @*<script src="/Scripts/jquery-1.12.4.min.js" type="text/javascript"></script>*@
    <script src="/Scripts/jquery-3.3.1.min.js" type="text/javascript"></script>
    <script src="/Scripts/jquery.validate.min.js" type="text/javascript"></script>
    <script src="/Scripts/jquery.validate.unobtrusive.min.js" type="text/javascript"></script>
    <script src="/Scripts/bootstrap.min.js" type="text/javascript"></script>
    <script src="/Scripts/App/app-jq.js" type="text/javascript"></script>
    <script src="/Scripts/JQDialog/jqdialog.min.js" type="text/javascript"></script>
    <script src="/Scripts/JQDialog/jqdialog.custom.js" type="text/javascript"></script>
    <!-- DataTables Files -->
    <script src="/Scripts/jquery.blockUI.js" type="text/javascript"></script>
</head>
<body>
    <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
        @Html.ActionLink("RAB", "Index", "Home", new { area = "" }, new { @class = "navbar-brand", @style = "min-width: 100px;" })
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse">
            @Html.Partial("_MenuPartial-v2")
        </div>
    </nav>

    <main role="main">

        <div class="container">
            <!-- Example row of columns -->
            @RenderBody()
        </div> <!-- /container -->

    </main>

    <footer class="container">
        <p>&copy; @DateTime.Now.Year - RAB</p>
    </footer>

    <div class="modal fade" id="appModal" tabindex="-1" role="basic" aria-hidden="true" data-backdrop="static">
        <div class="modal-dialog " id="appModalDialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><span aria-hidden="true">×</span></button>
                    <h4 class="modal-title" id="appModalDialogTitle"></h4>
                </div>
                <div class="modal-body" id="appModalDialogContainer">
                </div>
            </div>
        </div>
    </div>

    <!-- Placed at the end of the document so the pages load faster -->
    <script src="/Scripts/jquery-ui.js" type="text/javascript"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
