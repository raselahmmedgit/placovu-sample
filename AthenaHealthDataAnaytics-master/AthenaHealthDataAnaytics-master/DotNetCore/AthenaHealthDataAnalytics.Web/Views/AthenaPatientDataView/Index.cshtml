@section scripts{
    <script src="~/js/athenapatientdataview.js" type="text/javascript"></script>
    <script type="text/javascript">
        var baseUrl = "/athena";
        $(document).ready(function () {
            AthenaPatientDataView.InitEvent('dataTablesAthenaPatientDataView');
            AthenaPatientDataView.LoadDataTables('dataTablesAthenaPatientDataView', App.DisplayLength(), (baseUrl+"/AthenaPatientDataView/IndexData"));
        });
    </script>
}