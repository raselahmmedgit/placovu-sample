@{
    ViewData["Title"] = "AthenaHealth Patient Data";
}
<style type="text/css">
    p.options label {
        margin-right: 10px;
    }

    p.options input[type=checkbox] {
        vertical-align: middle;
    }

    textarea#json-input {
        width: 100%;
        height: 200px;
    }

    pre#json-renderer {
        border: 1px solid #aaa;
    }
</style>

<div id="AthenaPatientDataView" class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h5>AthenaHealth Patient Data</h5>
            </div>
            <div class="card-body">
                <table id="dataTablesAthenaPatientDataView" class="table table-condenced table-striped table-bordered dt-responsive nowrap" style="width:100%;"></table>
            </div>
        </div>
    </div>
</div>
